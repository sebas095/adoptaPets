<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Adopta Pets</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://file.myfontastic.com/e5H9LUj5bTPs52rQ4f96C6/icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/ghpages-materialize.css">
    <link rel="stylesheet" href="/css/adoptapets.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <% include ../menu.ejs %>
    </header>
    <main>
      <div class="row">
        <div class="col s12 m9 l10">
          <div class="parallax-container">
            <div class="parallax"><img src="/img/fondo.png"></div>
          </div>
          <div class="container">
            <div class="section scrollspy">
              <% if (message.length > 0) { %>
                <div class="row">
                  <div class="col m6 s12 offset-m3">
                    <div class="alert alert-danger">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <p><%= message %></p>
                    </div>
                  </div>
                </div>
              <% } %>

              <% for (let usr of users) { %>
                <div class="row">
                  <form action="/adopta-pets/users/deactivateAccount?_method=put" method="post" id="form-<%= usr._id %>">
                    <div class="row">
                      <div class="col m6 s12">
                        <p>El usuario <%= usr.firstname %> <%= usr.lastname %> solicita la desactivaci√≥n de su cuenta</p>
                        <input type="hidden" name="email" id="email" value="<%= usr.email %>">
                        <input type="hidden" name="account" id="account-<%= usr._id %>">
                      </div>
                      <div class="col m6 s12">
                        <button class="btn waves-effect waves-light green accept" id="accept-<%= usr._id %>">Aprobar</button>
                        <button class="btn waves-effect waves-light red reject" id="reject-<%= usr._id %>">Rechazar</button>
                      </div>
                    </div>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- <div class="section no-pad-bot" id="index-banner">
        <div class="container">
          <div class="row center">
            <div class="col s12 m12">
              <div class="buysellads-header center-on-small-only">
                <div id="icon-intro" class="icon ap-title"></div>
              </div>
            </div>
          </div>
        </div>
      </div> -->

    </main>
    <% include ../footer %>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="/js/deactivate.js"></script>
    <script type="text/javascript">
      (function($) {
        $(function() {
          $('.button-collapse').sideNav();
          $('.parallax').parallax();
          $('.scrollspy').scrollSpy();
        }); // end of document ready
      })(jQuery); // end of jQuery name space
    </script>
  </body>
</html>
